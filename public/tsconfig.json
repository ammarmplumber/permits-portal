    "compilerOptions": {
      "target": "ES2022",
      "module": "ESNext",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "allowJs": false,
      "isolatedModules": true,
      "strict": true,
      "outDir": "dist"
    },
    "include": ["netlify/functions/**/*"],
    "exclude": ["node_modules"]
  }
  